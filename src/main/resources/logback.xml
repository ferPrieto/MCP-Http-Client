<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for stderr (MCP servers should log to stderr, not stdout) -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="STDERR" />
    </root>
    
    <!-- Application logger with TRACE level for detailed logging -->
    <logger name="ferprieto.mcp.httpclient" level="TRACE" />
</configuration>







